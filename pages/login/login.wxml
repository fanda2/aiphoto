<view class="contertain">
  <view wx:if="{{canIUse}}">
    <view class='header'>
      <image src='/img/login.png'></image>
    </view>
    <view class='content'>
      <view>申请获取以下权限</view>
      <text>获得你的公开信息(昵称，头像等)</text>
    </view>
    <view>
      <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="wxlogin">
        登录
      </button>
      <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="wxregister">
        注册
      </button>
    </view>
  </view>
  <view wx:else>请升级微信版本</view>
</view>